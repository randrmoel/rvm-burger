
    <div class = "row"> <!-- Contains Eaten and to Be Eaten -->
        <div class ="col-sm-6">
            <br>
            <h2>Burgers Available to be Eaten!</h2>
            <ul>
                {{#each brgrs}}
                    {{#unless devoured}}
                        <li>
                            {{id}}. {{burger_name}}
                            <button type = "button" class ="eatit btn btn-primary" data-id ="{{this.id}}" data-newDevoured="{{this.devoured}}">Devour It!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div> <!--End of Column -- Burgers to be eaten -->

        <div class = "col-sm-6">
            <h2>
                Burgers That Have Been Eaten!
            </h2>
            <ul>
                {{#each brgrs}}
                    {{#if devoured}}
                    <li>
                        {{id}}. {{burger_name}}
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div> <!-- End of Row for To be eaten and Eaten -->
    <div class = "row">
        <div class = "text-center col-sm-12">
            <h2>Add A Burger</h2>
   			<form class="create-form">
                <div class="form-group">
			        <p>
                        Order a Burger and submit.
                    </p>
			        <input type="text" id="newburger" name="burger_name">
			    </div>
			    <button id="addburger" class="btn btn-primary" type="button">Submit Burger</button>
			</form>
        </div>
    </div> <!-- End of Row To Add Burger -->
